{
    "Conformance": {
        "UseStrictConformance": true
    },
    "DataStore": {
        "Host": null,
        "Key": null,
        "DatabaseId": "health",
        "CollectionId": "fhir",
        "ConnectionMode": "Direct",
        "ConnectionProtocol": "Tcp",
        "DefaultConsistencyLevel": "Session",
        "PreferredLocations": []
    },
    "IdentityServer": {
        "Enabled": true,
        "Audience": "fhir-api",
        "ClientId": "known-client-id",
        "ClientSecret": "known-client-secret"
    },
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Warning"
        }
    },
    "Security": {
        "Enabled": true,
        "Authentication": {
            "Mode": "jwt",
            "Audience": "fhir-api",
            "Authority": "http://localhost:53727",
            "RequireHttpsMetaData": false
        },
        "LastModifiedClaims": [
            "client_id"
        ],
        "Roles": [
            {
                "Name": "admin",
                "Version":  "1", 
                "ResourcePermissions": [
                    {
                        "Filter": {
                            "TemplateExpression": "/"
                        },
                        "Actions": [
                            "read",
                            "write"
                        ]
                    }
                ]
            },
            {
                "Name": "reader",
                "Version":  "1", 
                "ResourcePermissions": [
                    {
                        "Filter": {
                            "TemplateExpression": "/"
                        },
                        "Actions": [
                            "read"
                        ]
                    }
                ]
            }
        ]
    },
    "Features": {
        "SupportsUI": false,
        "SupportsXml": true,
        "SecurityControllersEnabled": true,
        "UseAppSettingsRoleStore": true
    }
}
